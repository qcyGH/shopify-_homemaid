{% comment %}
    Renders cart notification

    Accepts:
    - color_scheme: {String} sets the color scheme of the notification (optional)

    Usage:
    {% render 'cart-notification' %}
{% endcomment %}

<cart-notification>
  <div class="container">
    <div class="row">
      <div class="cart-notification-wrapper">
        <div id="cart-notification" class="cart-notification focus-inse" aria-modal="true" aria-label="{{ 'general.cart.item_added' | t }}" role="dialog" tabindex="-1">
          <div class="cart-notification__header">
            <h2 class="cart-notification__heading caption-large text-body">{{ 'general.cart.item_added' | t }} <span>{%- render 'icon-success', icon_color: '217109' -%}</span></h2>
            <button type="button" class="cart-notification__close modal__close-button link link--text focus-inset" aria-label="{{ 'accessibility.close' | t }}">
              <svg class="icon icon-close" aria-hidden="true" focusable="false"><use href="#icon-close"></svg>
            </button>
          </div>
          <div id="cart-notification-product" class="cart-notification-product"></div>
          <div class="cart-notification__links">
            <a href="{{ routes.cart_url }}" id="cart-notification-button" class="btn button-homemaid button--full-width"></a>
            <form action="{{ routes.cart_url }}" method="post" id="cart-notification-form">
              <button class="btn button-homemaid btn--dark button--full-width" name="checkout">{{ 'sections.cart.checkout' | t }}</button>
            </form>
            <button type="button" class="link link-homemaid button-label">{{ 'general.continue_shopping' | t }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</cart-notification>
{% style %}
  .cart-notification {
     display: none;
  }
{% endstyle %}
